    %nav
      %h1
        %a{:href=>"#!/home"}
          Stef Lewandowski
      %h2
        Wedding photography
      %ul
        %li
          %a#show_about{:href=>"#!/about"}
            About
        %li
          %a#show_pricing{:href=>"#!/pricing"}
            Pricing
        %li
          %a#show_contact{:href=>"#!/contact"}
